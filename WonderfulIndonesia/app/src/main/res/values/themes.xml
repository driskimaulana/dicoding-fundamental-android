<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.WonderfulIndonesia" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/white</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="android:textViewStyle">@style/PoppinsTextViewStyle</item>
        <item name="android:actionBarStyle">@style/My_ActionBar</item>
    </style>
    
    <style name="PoppinsTextViewStyle">
        <item name="android:fontFamily">@font/poppins</item>
    </style>

    <style name="Larger_Drawable">
        <item name="android:textSize">10sp</item>
        <item name="android:scaleX">1.6</item>
        <item name="android:scaleY">1.6</item>
    </style>

    <style name="Normal_Drawable">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="Smaller_Drawable">
        <item name="android:textSize">20sp</item>
        <item name="android:scaleX">0.8</item>
        <item name="android:scaleY">0.8</item>
    </style>

    <style name="My_ActionBar" parent="@android:style/Widget.Holo.Light.ActionBar">
        <item name="android:background">@color/green_primary</item>
    </style>
</resources>