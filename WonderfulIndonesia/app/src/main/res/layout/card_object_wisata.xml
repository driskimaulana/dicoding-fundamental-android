<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:elevation="10dp"
    app:cardCornerRadius="10dp"
    android:layout_marginHorizontal="7dp"
    android:layout_marginVertical="5dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp">

        <ImageView
            android:id="@+id/img_objectWisata"
            android:layout_width="111dp"
            android:layout_height="111dp"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_sample_image" />

        <TextView
            android:id="@+id/tv_objectWisata"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="7dp"
            android:layout_toRightOf="@id/img_objectWisata"
            android:fontFamily="@font/poppins"
            android:maxLines="2"
            android:text="Nama Object Wisata"
            android:textSize="6pt"
            android:textStyle="bold" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Deskripsi Object Wisata"
            android:maxLines="5"
            android:layout_below="@+id/tv_objectWisata"
            android:layout_toRightOf="@+id/img_objectWisata"
            android:layout_marginHorizontal="7dp"
            android:textSize="4pt"
            android:id="@+id/tv_deskripsiObjectWisata"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_deskripsiObjectWisata"
            android:layout_toRightOf="@+id/img_objectWisata"
            >

            <ImageView
                android:layout_width="12dp"
                android:layout_height="20dp"
                android:src="@drawable/ic_location"
                android:id="@+id/ic_location"
                android:layout_marginLeft="7dp"
                />


            <TextView
                android:id="@+id/tv_location"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/ic_location"
                android:maxLines="1"
                android:textColor="@color/green_primary"
                android:text="Alamat Object Wisata"
                android:textSize="4pt"
                android:layout_marginTop="4dp"/>


        </RelativeLayout>


    </RelativeLayout>

</androidx.cardview.widget.CardView>